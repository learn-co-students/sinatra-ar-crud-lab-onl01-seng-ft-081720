<form action='/articles/<%= @article.id %>' method='post'>
    <input type='hidden' name='_method' value="patch">
    <label>Title: <input type="text" id="title" name="article[title]" value="<%= @article.title %>"></label>
    <label>Content: <input type="text" id="content" name="article[content]" value="<%= @article.content %>"></label>
    <input type="submit" name="submit" id="submit">
</form>