<form action="/articles/<%= @article.id %>" method="POST">
<input id="hidden" type="hidden" name="_method" value="PATCH">
<p>Title:</p><input id="title" type="text" name="article[title]" value="<%= @article.title %>" />
<p>Content:</p><textarea id="content" type="text" name="article[content]" value="<%= @article.content %>">
<input type="submit" value="submit" id="submit">
</form>


